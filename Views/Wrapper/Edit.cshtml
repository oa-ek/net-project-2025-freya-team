@model FREYA_WEB.Models.Wrapper

<h2>Редагувати обгортку</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="WrapperId" />
    <div class="form-group">
        <label>Назва</label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Колір</label>
        <input asp-for="Color" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Ціна</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" required />
    </div>
    <div class="form-group">
        <label>Кількість</label>
        <input asp-for="Count" class="form-control" type="number" required />
    </div>
    <div class="form-group">
        <label>Фото (URL)</label>
        <input asp-for="PhotoUrl" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success">Зберегти</button>
</form>
