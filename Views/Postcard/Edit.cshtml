@model FREYA_WEB.Models.Postcard

<h2>Редагувати листівку</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="PostcardId" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Color"></label>
        <input asp-for="Color" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Count"></label>
        <input asp-for="Count" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PhotoUrl"></label>
        <input asp-for="PhotoUrl" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Зберегти</button>
    <a asp-action="Index" class="btn btn-success">Назад</a>
</form>
