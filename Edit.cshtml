@model FlowerWEB.Models.Flower

@{
    ViewData["Title"] = "Редагувати квітку";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="FlowerId" />  

    <div class="form-group">
        <label for="Name">Назва</label>
        <input type="text" class="form-control" asp-for="Name" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Type">Тип</label>
        <input type="text" class="form-control" asp-for="Type" required />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Price">Ціна</label>
        <input type="number" class="form-control" asp-for="Price" required />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="PhotoUrl">Фото URL</label>
        <input type="text" class="form-control" asp-for="PhotoUrl" />
        <span asp-validation-for="PhotoUrl" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Зберегти</button>
</form>

<a href="@Url.Action("Index", "Flowers")" class="btn btn-secondary mt-2">Назад до списку</a>
